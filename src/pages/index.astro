---
import Layout from '@/layouts/Layout.astro';
import Renderer from '@/components/Renderer.astro';
---
<Layout title="Astro Prototype">
  <main>
    <!-- Persistent UI: Always on top (Buttons) -->
    <div id="layer-persistent">
      <nav class="global-controls" aria-label="Global Controls">
        <div class="layer-nav">
          <button id="nav-front" class="global-toggle active" aria-pressed="true">Front</button>
          <button id="nav-back" class="global-toggle" aria-pressed="false">Back</button>
        </div>

        <!-- Layer Indicator -->
        <div id="layer-indicator" class="layer-indicator" role="status" aria-label="Current Layer">
            <div class="layer-icon">
                <div class="layer-box back-box"></div>
                <div class="layer-box front-box"></div>
            </div>
            <span id="layer-text">L1</span>
        </div>
        
        <div class="divider"></div>

        <button id="themeToggle" class="global-toggle" aria-label="Toggle Dark/Light Theme" aria-pressed="false">Theme</button>
        <button id="modelToggle" class="global-toggle" aria-label="Switch 3D Model" aria-pressed="false">Model</button>
        <button id="blob-toggle" class="global-toggle" aria-label="Toggle Light Blob Effect" aria-pressed="false">Light</button>
        
        <div id="time-display" class="global-toggle time-control" tabindex="0" role="slider" aria-label="Time of Day Control. Swipe up/down to change time." aria-valuemin="0" aria-valuemax="24" aria-valuenow="12" aria-valuetext="12:00 UTC">
          <span class="time-label">TIME</span>
          <span class="time-value">12:00</span>
        </div>
      </nav>
    </div>

    <!-- Back Layer: Content behind the 3D scene (Moves to front when active) -->
    <div id="layer-back" class="layer">
      <div class="back-content">
      <!--         <h2>Noartroom</h2> -->
        <p class="description-background" transition:name="desc-layer-1">Layer 1</p>
        <p class="description-foreground" transition:name="desc-layer-0">Layer 0</p>
        
        <div class="cube-container">
          <div class="cube">
            <div class="face front"></div>
            <div class="face back"></div>
            <div class="face right"></div>
            <div class="face left"></div>
            <div class="face top"></div>
            <div class="face bottom"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Middle Layer: The 3D Scene -->
    <div id="layer-middle" class="layer">
      <Renderer />
    </div>

    <!-- Front Layer: Non-persistent UI (Audio Player, Titles) -->
    <div id="layer-front" class="layer">
      <!-- <h1 id="page-title" class="floating-title" transition:name="room-title">Room 1</h1> --> <!-- test -->
      
    </div>
  </main>
</Layout>

<script>
  // This script controls the global buttons
  import { theme, activeModel, isBlobActive, activeLayer } from '../lib/stores/sceneStore';
  import { timeStore, changeTime } from '../lib/stores/timeStore';

  const themeButton = document.getElementById('themeToggle');
  themeButton?.addEventListener('click', () => {
    const currentTheme = theme.get();
    const newTheme = currentTheme === 'light' ? 'dark' : 'light';
    
    // Only toggle theme - do not switch model
    theme.set(newTheme);
  });

  // Subscribe to theme changes to update body class
  theme.subscribe(newTheme => {
    if (newTheme === 'light') {
      document.body.classList.add('light-mode');
      document.body.classList.remove('dark-mode');
    } else {
      document.body.classList.add('dark-mode');
      document.body.classList.remove('light-mode');
    }
    // Update button state
    if (themeButton) {
      themeButton.setAttribute('aria-pressed', (newTheme === 'dark').toString());
    }
  });

  const modelButton = document.getElementById('modelToggle');
  modelButton?.addEventListener('click', () => {
    const current = activeModel.get();
    const newModel = current === 'light' ? 'dark' : 'light';
    // Only update if different to avoid unnecessary triggers
    if (current !== newModel) {
      activeModel.set(newModel);
    }
  });

  // Subscribe to model changes
  activeModel.subscribe(model => {
    if (modelButton) {
      // Assuming 'dark' model corresponds to the "active/pressed" state of the switch
      modelButton.setAttribute('aria-pressed', (model === 'dark').toString());
    }
  });

  const blobButton = document.getElementById('blob-toggle');
  blobButton?.addEventListener('click', () => {
    isBlobActive.set(!isBlobActive.get());
  });

  // Subscribe to blob changes
  isBlobActive.subscribe(active => {
    if (blobButton) {
      blobButton.setAttribute('aria-pressed', active.toString());
    }
  });

  // --- Layer Navigation Logic ---
  const navFront = document.getElementById('nav-front');
  const navBack = document.getElementById('nav-back');

  navFront?.addEventListener('click', () => activeLayer.set('front'));
  navBack?.addEventListener('click', () => activeLayer.set('back'));

  // Subscribe to layer changes
  activeLayer.subscribe(layer => {
    const isBack = layer === 'back';
    
    // Update body class for CSS styling
    document.body.classList.toggle('layer-back-active', isBack);
    document.body.classList.toggle('layer-front-active', !isBack);

    // Update button states
    if (navFront && navBack) {
      navFront.classList.toggle('active', !isBack);
      navFront.setAttribute('aria-pressed', (!isBack).toString());
      
      navBack.classList.toggle('active', isBack);
      navBack.setAttribute('aria-pressed', isBack.toString());
    }

    // Update Indicator
    const indicator = document.getElementById('layer-indicator');
    const layerText = document.getElementById('layer-text');
    
    if (indicator && layerText) {
        if (isBack) {
            // Back Layer Active (L0)
            indicator.classList.add('is-back');
            indicator.classList.remove('is-front');
            layerText.textContent = 'L0';
        } else {
            // Front Layer Active (L1)
            indicator.classList.add('is-front');
            indicator.classList.remove('is-back');
            layerText.textContent = 'L1';
        }
    }

    // Manage Focus/Visibility (Inert)
    const layerBack = document.getElementById('layer-back');
    const layerFront = document.getElementById('layer-front');

    if (layerBack && layerFront) {
      if (isBack) {
        // Back is active: Front should be inert
        layerFront.setAttribute('inert', '');
        layerBack.removeAttribute('inert');
      } else {
        // Front is active: Back should be inert
        layerBack.setAttribute('inert', '');
        layerFront.removeAttribute('inert');
      }
    }
  });

  // Time Control Logic
  const timeDisplay = document.getElementById('time-display');
  const timeValue = timeDisplay?.querySelector('.time-value');

  // Get timezone info
  const timeZone = Intl.DateTimeFormat().resolvedOptions().timeZone;
  // Extract city: "Europe/Berlin" -> "Berlin", replace underscores with spaces
  const city = (timeZone.split('/').pop() || 'UTC').replace(/_/g, ' ').toUpperCase();
  function formatTime(hours: number): string {
    const h = Math.floor(hours);
    const m = Math.floor((hours - h) * 60);
    return `${h.toString().padStart(2, '0')}:${m.toString().padStart(2, '0')} ${city}`;
  }

  // Update display when store changes
  timeStore.subscribe(value => {
    if (timeValue) {
      timeValue.textContent = formatTime(value);
    }
    if (timeDisplay) {
      timeDisplay.setAttribute('aria-valuenow', value.toString());
      timeDisplay.setAttribute('aria-valuetext', formatTime(value));
    }
  });

  if (timeDisplay) {
    // Fast Scroll (Wheel)
    timeDisplay.addEventListener('wheel', (e) => {
      e.preventDefault();
      
      // Determine sensitivity based on scroll speed/intensity
      // Standard deltaY is ~100.
      const magnitude = Math.abs(e.deltaY);
      let increment = 0.25; // Default 15 mins

      if (magnitude > 50) {
        increment = 1.0; // 1 Hour
      }

      const delta = e.deltaY > 0 ? increment : -increment;
      changeTime(delta);
    }, { passive: false });

    // Keyboard interaction
    timeDisplay.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowUp' || e.key === 'ArrowRight') {
        e.preventDefault();
        changeTime(0.5);
      } else if (e.key === 'ArrowDown' || e.key === 'ArrowLeft') {
        e.preventDefault();
        changeTime(-0.5);
      }
    });

    // Touch Interaction (Mobile Swipe)
    let touchStartY = 0;
    timeDisplay.addEventListener('touchstart', (e) => {
      touchStartY = e.touches[0].clientY;
    }, { passive: true });

    timeDisplay.addEventListener('touchmove', (e) => {
       // Prevent page scroll when interacting with the time control
       if (e.cancelable) e.preventDefault();
       
       const currentY = e.touches[0].clientY;
       const deltaY = currentY - touchStartY;
       
       // Threshold to avoid accidental jitters
       if (Math.abs(deltaY) > 5) {
           // Drag UP = Increment Time (Natural scrolling feeling)
           // Drag DOWN = Decrement Time
           const direction = deltaY > 0 ? -1 : 1;
           
           // Smoother increments for touch
           changeTime(direction * 0.15);
           touchStartY = currentY; // Reset for continuous drag
       }
    }, { passive: false });
  }

</script>

<script is:inline>
  // --- Idle Detection Logic ---
  // Using inline script to ensure it runs independently of module dependencies
  let idleTimer;
  let idleTimeoutDuration = 30000; // Start with 30 seconds
  let lastMouseX = 0;
  let lastMouseY = 0;

  function resetIdleTimer() {
    // If we were idle, remove the class
    if (document.body.classList.contains('user-idle')) {
      console.log('User active - waking up UI');
      document.body.classList.remove('user-idle');
    }

    // Reset the timer
    clearTimeout(idleTimer);
    idleTimer = window.setTimeout(() => {
      console.log('User idle - fading out UI');
      document.body.classList.add('user-idle');
      // After first disappearance, reduce timeout to 10 seconds
      idleTimeoutDuration = 10000;
    }, idleTimeoutDuration);
  }

  // Ignore small mouse movements (jitter)
  function handleMouseMove(e) {
    if (Math.abs(e.clientX - lastMouseX) > 2 || Math.abs(e.clientY - lastMouseY) > 2) {
      lastMouseX = e.clientX;
      lastMouseY = e.clientY;
      resetIdleTimer();
    }
  }

  // List of events that constitute "user interaction"
  const userEvents = ['mousedown', 'click', 'keypress', 'touchstart', 'touchmove', 'wheel', 'scroll'];

  userEvents.forEach(event => {
    window.addEventListener(event, resetIdleTimer, { passive: true });
  });
  
  // Handle mousemove separately
  window.addEventListener('mousemove', handleMouseMove, { passive: true });

  // Start the timer initially
  resetIdleTimer();
</script>

<script>
  import { activeLayer } from '../lib/stores/sceneStore';

  // --- Swipe Gesture for Layer Switching (Mobile) ---
  let touchStartX = 0;
  let touchStartY = 0;
  let touchStartTime = 0;

  window.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
      touchStartY = e.changedTouches[0].screenY;
      touchStartTime = Date.now();
  }, { passive: true });

  window.addEventListener('touchend', (e) => {
      const touchEndX = e.changedTouches[0].screenX;
      const touchEndY = e.changedTouches[0].screenY;
      const duration = Date.now() - touchStartTime;
      
      const deltaX = touchEndX - touchStartX;
      const deltaY = touchEndY - touchStartY;
      
      // Thresholds
      const minSwipeDistance = 50;
      const maxSwipeDuration = 400; // ms - "Flick" detection
      
      // Check if it's a flick/swipe and vertical
      if (duration < maxSwipeDuration && Math.abs(deltaY) > minSwipeDistance && Math.abs(deltaY) > Math.abs(deltaX)) {
          // Prevent if interacting with time control or buttons
          if (e.target instanceof Element && (e.target.closest('.time-control') || e.target.closest('button'))) {
              return;
          }

          if (deltaY < 0) {
              // Swipe UP -> Reveal Back / Go to Back Focus
              activeLayer.set('back');
          } else {
              // Swipe DOWN -> Reveal Front / Go to Front Focus
              activeLayer.set('front');
          }
      }
  }, { passive: true });
</script>

<style>
  main {
    width: 100vw;
    height: 100vh;
    overflow: hidden; /* Make it full-screen */
    background: transparent;
    position: relative; /* Context for absolute layers */
  }

  /* Layer Base Styles */
  .layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: all 0.5s ease-out;
  }

  /* --- Persistent Layer (UI) --- */
  #layer-persistent {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 0; /* Don't block clicks on full screen */
    z-index: 100; /* ALWAYS ON TOP */
    pointer-events: none;
  }

  /* --- Back Layer --- */
  #layer-back {
    z-index: 0; /* Default: Behind everything */
    /* opacity: 0.3; Moved to .back-content to fix ViewTransition bug */
    transform: scale(0.95);
    pointer-events: none;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* --- Middle Layer (3D) --- */
  #layer-middle {
    z-index: 1; /* Default: Middle */
    pointer-events: none; /* Let clicks pass through */
  }

  /* --- Front Layer --- */
  #layer-front {
    z-index: 2; /* Default: Front */
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  /* Interactive elements need pointer events */
  #layer-persistent .global-controls,
  #layer-front .floating-title,
  #layer-front :global(.iamf-player) {
    pointer-events: auto;
  }

  /* --- Navigation Controls --- */
  .global-controls {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap; /* Force single line */
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    pointer-events: auto;
    /* border-radius: 0; */
    padding: 0.5rem;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(20px);
    z-index: 1000;
    /* Box shadow always present, intensity controlled by CSS var */
    --panel-glow: 0;
    box-shadow: 0 0 calc(30px * var(--panel-glow)) rgba(240, 245, 255, var(--panel-glow));
    transition: opacity 0.3s ease, transform 0.3s ease;
    overflow-x: auto; /* Allow scroll on very small screens if needed */
  }

  .layer-nav {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0;
  }

  /* Layer Indicator */
  .layer-indicator {
      display: flex;
      align-items: center;
      gap: 0.8rem;
      margin-right: 0.5rem;
      font-family: 'Courier New', monospace;
      font-weight: bold;
      color: rgba(255, 255, 255, 0.9);
      background: rgba(0, 0, 0, 0.2);
      padding: 0.4rem 0.8rem;
      border-radius: 4px;
      border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .layer-icon {
      position: relative;
      width: 16px;
      height: 16px;
  }

  .layer-box {
      position: absolute;
      width: 12px;
      height: 12px;
      border: 1px solid rgba(255, 255, 255, 0.5);
      background: rgba(0, 0, 0, 0.3);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .back-box {
      top: 0;
      left: 0;
      z-index: 1;
  }

  .front-box {
      bottom: 0;
      right: 0;
      z-index: 2;
  }

  /* Active States */
  .layer-indicator.is-back .back-box {
      background: rgba(88, 166, 255, 0.8);
      border-color: #fff;
      z-index: 10;
      transform: scale(1.1);
      box-shadow: 0 0 10px rgba(88, 166, 255, 0.5);
  }

  .layer-indicator.is-front .front-box {
      background: rgba(88, 166, 255, 0.8);
      border-color: #fff;
      z-index: 10;
      transform: scale(1.1);
      box-shadow: 0 0 10px rgba(88, 166, 255, 0.5);
  }

  .divider {
    width: 1px;
    height: 20px;
    background: rgba(255, 255, 255, 0.1);
    margin: 0 0.2rem;
  }

  .global-toggle {
    padding: 0.5em 1em;
    background: rgba(68, 68, 68, 0.8);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    transition: all 0.2s ease-out;
    cursor: pointer;
    font-size: 0.9rem;
    
    /* Mobile Touch Optimization: Disable double-tap zoom delay */
    touch-action: manipulation;

    /* Dynamic lighting effects removed */
    box-shadow: 
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
      
    transform: translateZ(0);
    will-change: box-shadow, transform;
  }

  .global-toggle.active {
    background: rgba(88, 166, 255, 0.3);
    border-color: rgba(88, 166, 255, 0.5);
    box-shadow: 0 0 15px rgba(88, 166, 255, 0.3);
  }
  
  .global-toggle:hover {
    background: rgba(240, 245, 255, 0.15);
    transform: translateZ(5px) scale(1.05);
  }
  
  /* Mobile Improvements */
  @media (max-width: 768px) {
    .global-controls {
       /* Ensure it stays at top */
       top: 0;
       bottom: auto;
       right: 0;
       left: 0;
       max-width: 100%;
       justify-content: space-evenly;
       padding: 0.25rem;
    }
    
    .global-toggle {
        padding: 0.5em 0.8em; /* Slightly smaller padding to fit all */
        font-size: 0.8rem;
        white-space: nowrap;
    }
    
    .time-control .time-label {
        display: none; /* Hide label to save space */
    }

    /* Hide Front/Back buttons on mobile, replaced by swipe gestures */
    .layer-nav {
        display: none;
    }
    
    /* Keep divider if needed, or hide */
    .divider {
        display: none;
    }
  }

  .time-control {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    cursor: ns-resize;
    user-select: none;
    /* Ensure no zooming/panning interference while dragging */
    touch-action: none;
  }

  .time-label {
    font-size: 0.8em;
    opacity: 0.7;
    font-weight: bold;
  }

  .time-value {
    font-family: monospace;
    font-weight: bold;
  }
  
  .floating-title {
    position: absolute;
    top: 15%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 6rem;
    font-weight: 900;
    color: rgba(255, 255, 255, 0.9);
    pointer-events: none;
    z-index: 5;
    text-transform: uppercase;
    letter-spacing: 0.5rem;
    
    text-shadow: 
      0 0 20px rgba(0, 0, 0, 0.5);
    
    transition: text-shadow 0.1s ease-out;
    will-change: text-shadow;
  }

  /* --- Back Layer Content Styles --- */
  .back-content {
    /* Dimmed: Light=Black 0.3, Dark=White 0.3 */
    color: light-dark(rgba(0, 0, 0, 0.3), rgba(255, 255, 255, 0.3));
    text-align: center;
    max-width: 600px;
    padding: 2rem;
    /* Removed background box for cleaner wireframe integration */
    transition: transform 1.5s cubic-bezier(0.2, 0.8, 0.2, 1);
  }

  .cube-container {
    /* Define Box Dimensions (Default: Cube) */
    --box-w: 80vmin;
    --box-h: 80vmin;
    --box-d: 80vmin;

    width: var(--box-w);
    height: var(--box-h);
    perspective: 1000px;
    margin: 0;
    position: absolute;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
  }

  /* Mobile Adjustment: Rectangular Box */
  @media (max-width: 768px) {
    .cube-container {
        --box-w: 85vw;
        --box-h: 60vh;
        --box-d: 60vw;
    }
  }

  .cube {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    transform: rotateY(0deg); /* Static room alignment */
  }

  .face {
    position: absolute;
    background: transparent;
    border: 2px solid rgba(100, 200, 255, 0.4); /* Thicker and brighter */
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: monospace;
    font-size: 0.8rem;
    letter-spacing: 2px;
    color: rgba(100, 200, 255, 0.2);
    box-shadow: 0 0 10px rgba(100, 200, 255, 0.2), inset 0 0 20px rgba(100, 200, 255, 0.1); /* Glow */
    backface-visibility: visible;
  }

  :global(.light-mode) .face {
    border-color: rgba(0, 80, 160, 0.6);
    color: rgba(0, 50, 100, 0.8);
    box-shadow: 0 0 10px rgba(0, 80, 160, 0.1), inset 0 0 20px rgba(0, 80, 160, 0.05);
  }

  /* Face Dimensions & Transforms using variables */
  /* Front/Back: Width x Height */
  .front, .back { width: var(--box-w); height: var(--box-h); }
  .front  { transform: rotateY(0deg) translateZ(calc(var(--box-d) / 2)); }
  .back   { transform: rotateY(180deg) translateZ(calc(var(--box-d) / 2)); }
  
  /* Right/Left: Depth x Height */
  .right, .left { width: var(--box-d); height: var(--box-h); }
  .right  { transform: rotateY(90deg) translateZ(calc(var(--box-w) / 2)); }
  .left   { transform: rotateY(-90deg) translateZ(calc(var(--box-w) / 2)); }
  
  /* Top/Bottom: Width x Depth */
  .top, .bottom { width: var(--box-w); height: var(--box-d); }
  .top    { transform: rotateX(90deg) translateZ(calc(var(--box-h) / 2)); }
  .bottom { transform: rotateX(-90deg) translateZ(calc(var(--box-h) / 2)); }
</style>
