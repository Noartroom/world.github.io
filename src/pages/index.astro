---
import Layout from '@/layouts/Layout.astro';
import Renderer from '@/components/Renderer.astro';
---
<Layout title="Astro Prototype">
  <main>
    <!-- Persistent UI: Always on top (Buttons) -->
    <div id="layer-persistent">
      <div class="global-controls">
        <div class="layer-nav">
          <button id="nav-front" class="global-toggle active" aria-pressed="true">Front Focus</button>
          <button id="nav-back" class="global-toggle" aria-pressed="false">Back Focus</button>
        </div>
        
        <div class="divider"></div>

        <button id="themeToggle" class="global-toggle" aria-label="Toggle Dark/Light Theme">Toggle Theme</button>
        <button id="modelToggle" class="global-toggle" aria-label="Switch 3D Model">Switch Model</button>
        <button id="blob-toggle" class="global-toggle" aria-label="Toggle Light Blob Effect">Toggle Light Blob</button>
        
        <div id="time-display" class="global-toggle time-control" tabindex="0" role="slider" aria-label="Time of Day Control. Swipe up/down to change time." aria-valuemin="0" aria-valuemax="24">
          <span class="time-label">TIME</span>
          <span class="time-value">12:00</span>
        </div>
      </div>
    </div>

    <!-- Back Layer: Content behind the 3D scene (Moves to front when active) -->
    <div id="layer-back" class="layer">
      <div class="back-content">
        <h2>The Back Layer</h2>
        <p class="description-background">This content lives in the next Layer</p>
        <p class="description-foreground">Layer 0</p>
        
        <div class="cube-container">
          <div class="cube">
            <div class="face front">Front</div>
            <div class="face back">Back</div>
            <div class="face right">Right</div>
            <div class="face left">Left</div>
            <div class="face top">Top</div>
            <div class="face bottom">Bottom</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Middle Layer: The 3D Scene -->
    <div id="layer-middle" class="layer">
      <Renderer />
    </div>

    <!-- Front Layer: Non-persistent UI (Audio Player, Titles) -->
    <div id="layer-front" class="layer">
      <h1 id="page-title" class="floating-title"></h1> <!-- test -->
      
    </div>
  </main>
</Layout>

<script>
  // This script controls the global buttons
  import { theme, activeModel, isBlobActive, activeLayer } from '../lib/stores/sceneStore';
  import { timeStore, changeTime } from '../lib/stores/timeStore';

  const themeButton = document.getElementById('themeToggle');
  themeButton?.addEventListener('click', () => {
    const currentTheme = theme.get();
    const newTheme = currentTheme === 'light' ? 'dark' : 'light';
    
    // Only toggle theme - do not switch model
    theme.set(newTheme);
  });

  // Subscribe to theme changes to update body class
  theme.subscribe(newTheme => {
    if (newTheme === 'light') {
      document.body.classList.add('light-mode');
      document.body.classList.remove('dark-mode');
    } else {
      document.body.classList.add('dark-mode');
      document.body.classList.remove('light-mode');
    }
  });

  const modelButton = document.getElementById('modelToggle');
  modelButton?.addEventListener('click', () => {
    const current = activeModel.get();
    const newModel = current === 'light' ? 'dark' : 'light';
    // Only update if different to avoid unnecessary triggers
    if (current !== newModel) {
      activeModel.set(newModel);
    }
  });

  const blobButton = document.getElementById('blob-toggle');
  blobButton?.addEventListener('click', () => {
    isBlobActive.set(!isBlobActive.get());
  });

  // --- Layer Navigation Logic ---
  const navFront = document.getElementById('nav-front');
  const navBack = document.getElementById('nav-back');

  navFront?.addEventListener('click', () => activeLayer.set('front'));
  navBack?.addEventListener('click', () => activeLayer.set('back'));

  // Subscribe to layer changes
  activeLayer.subscribe(layer => {
    const isBack = layer === 'back';
    
    // Update body class for CSS styling
    document.body.classList.toggle('layer-back-active', isBack);
    document.body.classList.toggle('layer-front-active', !isBack);

    // Update button states
    if (navFront && navBack) {
      navFront.classList.toggle('active', !isBack);
      navFront.setAttribute('aria-pressed', (!isBack).toString());
      
      navBack.classList.toggle('active', isBack);
      navBack.setAttribute('aria-pressed', isBack.toString());
    }
  });

  // Time Control Logic
  const timeDisplay = document.getElementById('time-display');
  const timeValue = timeDisplay?.querySelector('.time-value');

  // Get timezone info
  const timeZone = Intl.DateTimeFormat().resolvedOptions().timeZone;
  // Extract city: "Europe/Berlin" -> "Berlin", replace underscores with spaces
  const city = (timeZone.split('/').pop() || 'UTC').replace(/_/g, ' ').toUpperCase();
  function formatTime(hours: number): string {
    const h = Math.floor(hours);
    const m = Math.floor((hours - h) * 60);
    return `${h.toString().padStart(2, '0')}:${m.toString().padStart(2, '0')} ${city}`;
  }

  // Update display when store changes
  timeStore.subscribe(value => {
    if (timeValue) {
      timeValue.textContent = formatTime(value);
    }
  });

  if (timeDisplay) {
    // Fast Scroll (Wheel)
    timeDisplay.addEventListener('wheel', (e) => {
      e.preventDefault();
      
      // Determine sensitivity based on scroll speed/intensity
      // Standard deltaY is ~100.
      const magnitude = Math.abs(e.deltaY);
      let increment = 0.25; // Default 15 mins

      if (magnitude > 50) {
        increment = 1.0; // 1 Hour
      }

      const delta = e.deltaY > 0 ? increment : -increment;
      changeTime(delta);
    }, { passive: false });

    // Keyboard interaction
    timeDisplay.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowUp' || e.key === 'ArrowRight') {
        e.preventDefault();
        changeTime(0.5);
      } else if (e.key === 'ArrowDown' || e.key === 'ArrowLeft') {
        e.preventDefault();
        changeTime(-0.5);
      }
    });

    // Touch Interaction (Mobile Swipe)
    let touchStartY = 0;
    timeDisplay.addEventListener('touchstart', (e) => {
      touchStartY = e.touches[0].clientY;
    }, { passive: true });

    timeDisplay.addEventListener('touchmove', (e) => {
       // Prevent page scroll when interacting with the time control
       if (e.cancelable) e.preventDefault();
       
       const currentY = e.touches[0].clientY;
       const deltaY = currentY - touchStartY;
       
       // Threshold to avoid accidental jitters
       if (Math.abs(deltaY) > 5) {
           // Drag UP = Increment Time (Natural scrolling feeling)
           // Drag DOWN = Decrement Time
           const direction = deltaY > 0 ? -1 : 1;
           
           // Smoother increments for touch
           changeTime(direction * 0.15);
           touchStartY = currentY; // Reset for continuous drag
       }
    }, { passive: false });
  }

</script>

<script is:inline>
  // --- Idle Detection Logic ---
  // Using inline script to ensure it runs independently of module dependencies
  let idleTimer;
  let idleTimeoutDuration = 30000; // Start with 30 seconds
  let lastMouseX = 0;
  let lastMouseY = 0;

  function resetIdleTimer() {
    // If we were idle, remove the class
    if (document.body.classList.contains('user-idle')) {
      console.log('User active - waking up UI');
      document.body.classList.remove('user-idle');
    }

    // Reset the timer
    clearTimeout(idleTimer);
    idleTimer = window.setTimeout(() => {
      console.log('User idle - fading out UI');
      document.body.classList.add('user-idle');
      // After first disappearance, reduce timeout to 10 seconds
      idleTimeoutDuration = 10000;
    }, idleTimeoutDuration);
  }

  // Ignore small mouse movements (jitter)
  function handleMouseMove(e) {
    if (Math.abs(e.clientX - lastMouseX) > 2 || Math.abs(e.clientY - lastMouseY) > 2) {
      lastMouseX = e.clientX;
      lastMouseY = e.clientY;
      resetIdleTimer();
    }
  }

  // List of events that constitute "user interaction"
  const userEvents = ['mousedown', 'click', 'keypress', 'touchstart', 'touchmove', 'wheel', 'scroll'];

  userEvents.forEach(event => {
    window.addEventListener(event, resetIdleTimer, { passive: true });
  });
  
  // Handle mousemove separately
  window.addEventListener('mousemove', handleMouseMove, { passive: true });

  // Start the timer initially
  resetIdleTimer();
</script>

<style>
  main {
    width: 100vw;
    height: 100vh;
    overflow: hidden; /* Make it full-screen */
    background: transparent;
    position: relative; /* Context for absolute layers */
  }

  /* Layer Base Styles */
  .layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: all 0.5s ease-out;
  }

  /* --- Persistent Layer (UI) --- */
  #layer-persistent {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 0; /* Don't block clicks on full screen */
    z-index: 100; /* ALWAYS ON TOP */
    pointer-events: none;
  }

  /* --- Back Layer --- */
  #layer-back {
    z-index: 0; /* Default: Behind everything */
    /* opacity: 0.3; Moved to .back-content to fix ViewTransition bug */
    transform: scale(0.95);
    pointer-events: none;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* --- Middle Layer (3D) --- */
  #layer-middle {
    z-index: 1; /* Default: Middle */
    pointer-events: none; /* Let clicks pass through */
  }

  /* --- Front Layer --- */
  #layer-front {
    z-index: 2; /* Default: Front */
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  /* Interactive elements need pointer events */
  #layer-persistent .global-controls,
  #layer-front .floating-title,
  #layer-front :global(.iamf-player) {
    pointer-events: auto;
  }

  /* --- Navigation Controls --- */
  .global-controls {
    position: fixed;
    top: 1rem;
    right: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    pointer-events: auto;
    border-radius: 8px;
    padding: 0.5rem;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(20px);
    /* Box shadow always present, intensity controlled by CSS var */
    --panel-glow: 0;
    box-shadow: 0 0 calc(30px * var(--panel-glow)) rgba(240, 245, 255, var(--panel-glow));
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .layer-nav {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .divider {
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    margin: 0.2rem 0;
  }

  .global-toggle {
    padding: 0.5em 1em;
    background: rgba(68, 68, 68, 0.8);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    transition: all 0.2s ease-out;
    cursor: pointer;
    font-size: 0.9rem;
    
    /* Mobile Touch Optimization: Disable double-tap zoom delay */
    touch-action: manipulation;

    /* Dynamic lighting effects removed */
    box-shadow: 
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
      
    transform: translateZ(0);
    will-change: box-shadow, transform;
  }

  .global-toggle.active {
    background: rgba(88, 166, 255, 0.3);
    border-color: rgba(88, 166, 255, 0.5);
    box-shadow: 0 0 15px rgba(88, 166, 255, 0.3);
  }
  
  .global-toggle:hover {
    background: rgba(240, 245, 255, 0.15);
    transform: translateZ(5px) scale(1.05);
  }
  
  /* Mobile Improvements */
  @media (max-width: 768px) {
    .global-controls {
       /* Move to bottom right on mobile for better reachability */
       top: auto;
       bottom: 5rem; /* Above audio player */
       right: 1rem;
       max-width: 260px;
    }
    
    .global-toggle {
        padding: 0.8em 1.2em; /* Larger touch targets */
        font-size: 1rem;
    }
  }

  .time-control {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    cursor: ns-resize;
    user-select: none;
    /* Ensure no zooming/panning interference while dragging */
    touch-action: none;
  }

  .time-label {
    font-size: 0.8em;
    opacity: 0.7;
    font-weight: bold;
  }

  .time-value {
    font-family: monospace;
    font-weight: bold;
  }
  
  .floating-title {
    position: absolute;
    top: 15%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 6rem;
    font-weight: 900;
    color: rgba(255, 255, 255, 0.9);
    pointer-events: none;
    z-index: 5;
    text-transform: uppercase;
    letter-spacing: 0.5rem;
    
    text-shadow: 
      0 0 20px rgba(0, 0, 0, 0.5);
    
    transition: text-shadow 0.1s ease-out;
    will-change: text-shadow;
  }

  /* --- Back Layer Content Styles --- */
  .back-content {
    /* Dimmed: Light=Black 0.3, Dark=White 0.3 */
    color: light-dark(rgba(0, 0, 0, 0.3), rgba(255, 255, 255, 0.3));
    text-align: center;
    max-width: 600px;
    padding: 2rem;
    /* Removed background box for cleaner wireframe integration */
    transition: transform 1.5s cubic-bezier(0.2, 0.8, 0.2, 1);
  }

  .cube-container {
    width: 80vmin;
    height: 80vmin;
    perspective: 1000px;
    margin: 0;
    position: absolute;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
  }

  .cube {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    transform: rotateY(0deg); /* Static room alignment */
  }

  .face {
    position: absolute;
    width: 80vmin;
    height: 80vmin;
    background: transparent;
    border: 2px solid rgba(100, 200, 255, 0.4); /* Thicker and brighter */
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: monospace;
    font-size: 0.8rem;
    letter-spacing: 2px;
    color: rgba(100, 200, 255, 0.2);
    box-shadow: 0 0 10px rgba(100, 200, 255, 0.2), inset 0 0 20px rgba(100, 200, 255, 0.1); /* Glow */
    backface-visibility: visible;
  }

  :global(.light-mode) .face {
    border-color: rgba(0, 80, 160, 0.6);
    color: rgba(0, 50, 100, 0.8);
    box-shadow: 0 0 10px rgba(0, 80, 160, 0.1), inset 0 0 20px rgba(0, 80, 160, 0.05);
  }

  .front  { transform: rotateY(0deg) translateZ(40vmin); }
  .back   { transform: rotateY(180deg) translateZ(40vmin); }
  .right  { transform: rotateY(90deg) translateZ(40vmin); }
  .left   { transform: rotateY(-90deg) translateZ(40vmin); }
  .top    { transform: rotateX(90deg) translateZ(40vmin); }
  .bottom { transform: rotateX(-90deg) translateZ(40vmin); }
</style>
